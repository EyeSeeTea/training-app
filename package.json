{
  "name": "dhis2-app-skeleton",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@dhis2/d2-i18n": "^1.0.4",
    "@dhis2/d2-i18n-extract": "^1.0.7",
    "@dhis2/d2-i18n-generate": "^1.0.19",
    "@dhis2/d2-ui-app": "^1.0.11",
    "@dhis2/d2-ui-core": "^1.3.5",
    "@dhis2/d2-ui-header-bar": "^1.1.10",
    "d2": "^30.0.2",
    "husky": "^1.1.2",
    "postcss-rtl": "^1.3.2",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-scripts": "2.0.5"
  },
  "scripts": {
    "prestart": "yarn localize",
    "start": "BROWSER=false PORT=8081 react-scripts start",
    "build": "yarn localize && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "extract-pot": "d2-i18n-extract -p src/ -o i18n/",
    "localize": "yarn extract-pot && d2-i18n-generate -n dhis2-app-skeleton -p ./i18n/ -o ./src/locales/",
    "update-po": "for pofile in i18n/*.po; do msgmerge --backup=off -U $pofile i18n/en.pot; done"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn extract-pot && CI=true yarn test && git add ./i18n/"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
